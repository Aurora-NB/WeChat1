/* 横着的分割View样式 */
/*分割线样式*/
.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 10rpx;
}


/* 分隔线--底部 */
.line {
  width: 90%;
  /* 分隔线的长度 */
  margin: auto;
  height: 1px;
  /* 分隔线粗细 */
  text-align: center;
  font-size: 24rpx;
  color: #aaa;
  background: #ccc;
  margin-top: 5px;
  margin-bottom: 22px;
}

.line span {

  position: relative;
  top: -8px;
  background: #fff;
  padding: 0px 10px;
}